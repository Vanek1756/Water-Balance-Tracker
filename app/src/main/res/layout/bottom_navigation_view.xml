<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/menuSettings"
                style="@style/menu_linearLayout">

                <ImageView
                    android:id="@+id/imgSettings"
                    style="@style/menu_ImageView"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_bottom_nav_settings" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/homeFragment"
                style="@style/menu_linearLayout">

                <ImageView
                    android:id="@+id/imgHome"
                    style="@style/menu_ImageView"
                    android:src="@drawable/ic_bottom_nav_home1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/statsFragment"
                style="@style/menu_linearLayout">

                <ImageView
                    android:id="@+id/imgStatistic"
                    style="@style/menu_ImageView"
                    android:src="@drawable/ic_bottom_nav_statistic" />

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
